# TwojTenis MCP Server Configuration
# Copy this file to .env and fill in your credentials

# Required: Your TwojTenis.pl credentials
TWOJTENIS_EMAIL=your_email@example.com
TWOJTENIS_PASSWORD=your_password

# Optional: Configuration file path (default: config/config.json)
TWOJTENIS_CONFIG_PATH=config/config.json

# Optional: Session storage file path (default: config/session.json)
TWOJTENIS_SESSION_FILE=config/session.json

# Optional: Base URL for TwojTenis.pl (default: https://www.twojtenis.pl)
TWOJTENIS_BASE_URL=https://www.twojtenis.pl

# Optional: Session refresh interval in seconds (default: 60)
TWOJTENIS_SESSION_REFRESH=60

# Optional: Session lifetime in minutes (default: 120)
TWOJTENIS_SESSION_LIFETIME=120

# Optional: HTTP request timeout in seconds (default: 30)
TWOJTENIS_REQUEST_TIMEOUT=30

# Optional: Number of retry attempts for failed requests (default: 3)
TWOJTENIS_RETRY_ATTEMPTS=3

# Optional: Delay between retry attempts in seconds (default: 1.0)
TWOJTENIS_RETRY_DELAY=1.0